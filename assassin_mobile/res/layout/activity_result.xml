<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ResultActivity" >

    <ImageView
        android:id="@+id/attemptResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:contentDescription="@string/attemptDescription"
        android:scaleType="centerCrop"
        android:src="@drawable/assassin_launcher" />
        
    <TextView
        android:id="@+id/toUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="toUsername" />
    
    <TextView
        android:id="@+id/success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="success" />
    
    <TextView
        android:id="@+id/confidenceLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confidence level" />
    
    <LinearLayout 
        android:orientation="horizontal" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

	    <Button
	        android:id="@+id/resultMenu"
	        style="@style/ButtonTextSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginBottom="22dp"
	        android:layout_weight="3"
	        android:background="@drawable/btn_red"
	        android:onClick="menu"
	        android:text="@string/home" />
	
	    <Button
	        android:id="@+id/assassinate"
	        style="@style/ButtonTextSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginBottom="22dp"
	        android:layout_weight="3"
	        android:background="@drawable/btn_red"
	        android:onClick="makeAttempt"
	        android:text="@string/assassinate" />
	
	    <Button
	        android:id="@+id/showLeaderboard"
	        style="@style/ButtonTextSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginBottom="22dp"
	        android:layout_weight="3"
	        android:background="@drawable/btn_red"
	        android:onClick="showLeaderboard"
	        android:text="@string/showLeaderboard" />
   	</LinearLayout>

</LinearLayout>